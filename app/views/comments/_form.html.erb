<div class="m-2 mt-4">
    <%= form_with model: [ @story, @story.comments.build ] do |form| %>
        
        <%= form.text_area :body, style:"width:100%", placeholder:'Write a comment...' %>
        
        <div class="flex items-center">
            <div></div>
            <button class="ml-auto">
                <%= form.submit "Post", class: 'px-4 py-1.5 cursor-pointer bg-cyan-500 hover:bg-cyan-700 text-slate-200' %>
            </button>
        </div>



    <% end %>
</div>

